  "event": [
    {
      "listen": "test",
      "script": {
        "exec": [
          "// Captura o ID do produto após cadastro",
          "if (pm.response.code === 201) {",
          "    const response = pm.response.json();",
          "    pm.collectionVariables.set(\"produto_id\", response._id);",
          "    pm.test(\"Produto cadastrado\", function () {",
          "        pm.existe(response._id).to.be.a(\"string\");",
          "    });",
          "}"
        ],
        "type": "text/javascript"
      }
    }
  ]
